<Window x:Class="WPF_Image_Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Image_Gallery"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowState="Minimized"
        ResizeMode="NoResize"
        Title="This PC" Height="450" Width="800">
    
    <!--<Window.Resources>
        <DataTemplate x:Key="IconTemplate">
            <Border Background="Transparent">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Image Source="{Binding Icon}" Width="20" Height="20"/>
                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>-->
    <Window.Resources>
        <DataTemplate x:Key="IconTemplate">
            <Border Background="Transparent">
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Image Source="{Binding Icon}" Width="20" Height="20" />
                    <TextBlock Text="{Binding Name}" VerticalAlignment="Bottom" />
                    <TextBlock Text="{Binding Extension}"/>
                    <TextBlock Text="{Binding Size}"/>
                </StackPanel>-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition MinWidth="300"/>
                        <ColumnDefinition MinWidth="50"/>
                        <ColumnDefinition MinWidth="50"/>
                        <ColumnDefinition MinWidth="40"/>
                        <ColumnDefinition MinWidth="70"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Source="{Binding Icon}" Width="17" Height="17"/>
                    <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Bottom" Padding="5,0"/>
                    <TextBlock Grid.Column="2" Text="{Binding Extension}" Padding="5,0" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="3" Text="{Binding Size}" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="4" Text="KB"/>
                    <TextBlock Grid.Column="5" Text="{Binding CreateDate}" HorizontalAlignment="Right" Margin="0,0,6,0"/>
                    <TextBlock Grid.Column="6" Text="{Binding CreateTime}" HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--row0-->
        <Grid Grid.Row="0" Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <!--column0-->
            <Menu Grid.Column="0"
                  FontSize="17"
                  Background="WhiteSmoke">
                <MenuItem Header="File">
                    <MenuItem Header="Save"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Delete"/>
                    <MenuItem Header="Insert"/>
                </MenuItem>
            </Menu>
            
            <!--column1-->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="20,0,0,0">
                
                <ComboBox
                    Name="cmbExtension"
                    Width="70"
                />
                <TextBox
                    Name="txtSearch"
                    GotFocus="txtSearch_GotFocus"
                    LostFocus="txtSearch_LostFocus"
                     
                    Width="290"
                    Margin="10,0,10,0"
                    FontSize="16"
                    Text="Search"
                    Padding="5"
                />
            </StackPanel>
        </Grid>
        
        <!--row1-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--<TreeView Grid.Column="0"
                      Name="treeView"
                      FontSize="15"
                      Margin="5"
                      ItemTemplate="{StaticResource IconTemplate}"
             />-->

            <!--column0 tree view-->
            <TreeView Name="treeView" FontSize="15" Margin="5" ItemsSource="{Binding itemModels}">
                <!--show tree view template-->
                <TreeView.ItemTemplate>
                    
                    <!--show tree hierarchical, will apply the same style to all level hierarchy-->
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        
                        <StackPanel MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" Orientation="Horizontal">
                            <Image Source="{Binding Icon}" Width="20" Height="20"/>
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                        
                    </HierarchicalDataTemplate>
                    
                </TreeView.ItemTemplate>
            </TreeView>


            <!--column1 list view-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!--row0-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.3*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Name" FontSize="15"/>
                    <TextBlock Grid.Column="1" Text="Extension" FontSize="15" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="Size" FontSize="15" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Create Date" FontSize="15" HorizontalAlignment="Center"/>
             
                </Grid>
                
                <!--row1-->
                <ListView Grid.Row="1" 
                          Name="listView"
                          Margin="0,5,0,0"
                          ItemsSource="{Binding ListViewItemModels}" 
                          ItemTemplate="{StaticResource IconTemplate}" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                          ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <!--<ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>-->
            </Grid>
            
        </Grid>
    </Grid>
</Window>