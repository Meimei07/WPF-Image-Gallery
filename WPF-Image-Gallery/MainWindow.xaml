    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--row0 path, search-->
        <Grid Grid.Row="0" Background="WhiteSmoke" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--column0 path-->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5,5,0,5">
                <TextBlock Text="Path : " FontSize="17"/>
                <TextBox Grid.Column="0"
                    Name="tbPath" 
                    IsReadOnly="True"
                    Text="{Binding FullPath}" 
         
                    Width="340"
                    FontSize="15"
                />
            </StackPanel>

            <!--column1 combo box, search-->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="20,0,0,0">

                <ComboBox Name="cmbSearchType"
                          Width="70" 
                          Margin="0, 5"
                          FontSize="15">
                    <ComboBoxItem Content="Name"/>
                    <ComboBoxItem Content="Type"/>
                    <ComboBoxItem Content="Size"/>
                    <ComboBoxItem Content="Create Date"/>
                </ComboBox>
                
                <TextBox
                    Name="tbSearch"
                    GotFocus="tbSearch_GotFocus"
                    LostFocus="tbSearch_LostFocus"
                    TextChanged="tbSearch_TextChanged"
                     
                    Text="Search"
                    Width="300"
                    Margin="5"
                    FontSize="16"
                    Padding="5,0"
                />
            </StackPanel>
        </Grid>

        <!--row1 toolbar: delete, copy, paste, details ...-->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="0.2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    
                    <ColumnDefinition/> <!--detail button-->
                </Grid.ColumnDefinitions>

                <Button Grid.Column="3"
                    Name="btnDetail"
                    Click="btnDetail_Click"
                        
                    Content="Details"
                    Background="White"
                    FontSize="20"
                    BorderThickness="0.3"
                    BorderBrush="Gray"
                    Padding="0,0,0,5"
                />
            </Grid>
        </Border>
        
        <!--row2-->
        <Grid Name="gridRow2" Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/> <!--tree view-->
                <ColumnDefinition Width="2"/> <!--spliter-->
                <ColumnDefinition Width="*"/> <!--list view-->
                <ColumnDefinition Width="2"/> <!--spliter-->
                <ColumnDefinition MaxWidth="250"/> <!--details-->
            </Grid.ColumnDefinitions>

            <!--column0 tree view-->
            <TreeView Name="treeView" FontSize="13" Padding="5,7,5,5" ItemsSource="{Binding itemModels}">
                <!--show tree view template-->
                <TreeView.ItemTemplate>

                    <!--show tree hierarchical, will apply the same style to all level hierarchy (parent/children)-->
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">

                        <StackPanel MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" Orientation="Horizontal">
                            <Image Source="{Binding Icon}" Width="20" Height="20"/>
                            <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
                        </StackPanel>

                    </HierarchicalDataTemplate>

                </TreeView.ItemTemplate>
            </TreeView>

            <!--column1 spliter-->
            <GridSplitter Grid.Column="1" Background="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!--column2 header & list view-->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--row0 header-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Name"/>
                    <TextBlock Grid.Column="1" Text="Type" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="2" Text="Size" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="3" Text="Create Date" HorizontalAlignment="Left"/>
                </Grid>

                <!--row1 list view content-->
                <ListView Grid.Row="1" 
                    Name="listView"
                    AllowDrop="True"
                    Drop="listView_Drop"
                    ItemsSource="{Binding ListViewItemModels}" 
                    ItemTemplate="{StaticResource IconTemplate}" 
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Margin="0,5,0,0"
                />

            </Grid>

            <!--column3 spliter-->
            <GridSplitter Grid.Column="3" Background="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!--column4 details-->
            <Border Grid.Column="4" 
                    Name="borderDetails" 
                    BorderBrush="Gray" BorderThickness="0.2" 
                    Visibility="Collapsed" 
                    Panel.ZIndex="100">
                
                <Grid Name="gridDetails" Margin="5 0">
                    <Grid.RowDefinitions>
                        <RowDefinition/> <!--image-->
                        <RowDefinition Height="0.2*"/> <!--name-->
                        <RowDefinition/> <!--more info-->
                    </Grid.RowDefinitions>

                    <Image Name="photo" Grid.Row="0" Source="{Binding Icon}"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Image Source="/Images/image.png" Width="15" Height="15" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="1" Text="{Binding Name}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Details" FontSize="14" HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Type" HorizontalAlignment="Left" FontSize="10"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Extension}" HorizontalAlignment="Right" FontSize="10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Size" HorizontalAlignment="Left" FontSize="10"/>
                        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal"  HorizontalAlignment="Right">
                            <TextBlock Text="{Binding Size}" FontSize="10"/>
                            <TextBlock Text=" KB" FontSize="10"/>
                        </StackPanel>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="File location" HorizontalAlignment="Left" FontSize="10"/>
                        <TextBlock Name="tbFullPath" Grid.Row="3" Grid.Column="2" Text="{Binding FullPath}" HorizontalAlignment="Right" FontSize="10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Create Date" HorizontalAlignment="Left" FontSize="10"/>
                        <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding CreateDate}" HorizontalAlignment="Right" FontSize="10"/>
                    </Grid>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>