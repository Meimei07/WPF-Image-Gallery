<Window x:Class="WPF_Image_Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Image_Gallery"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowState="Minimized"
        ResizeMode="NoResize"
        Title="This PC" Height="450" Width="800">

    <!--<Window.Resources>
        <DataTemplate x:Key="IconTemplate">
            <Border Background="Transparent">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Image Source="{Binding Icon}" Width="20" Height="20"/>
                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>-->
    <Window.Resources>
        <DataTemplate x:Key="IconTemplate">
            <Border Background="Transparent">
                
                <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="310"/>
                        <ColumnDefinition MinWidth="60"/>
                        <ColumnDefinition MinWidth="70"/>
                        <ColumnDefinition MinWidth="150"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                        <Image Source="{Binding Icon}" Width="17" Height="17"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="{Binding Extension}"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding Size}"/>
                        <TextBlock Text="KB"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,0,0">
                        <TextBlock Text="{Binding CreateDate}" Margin="0,0,7,0"/>
                        <TextBlock Text="{Binding CreateTime}"/>
                    </StackPanel>
                </Grid>

            </Border>
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--row0-->
        <Grid Grid.Row="0" Background="WhiteSmoke" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--column0-->
            <Menu Grid.Column="0"
                  FontSize="17"
                  Background="WhiteSmoke">
                <MenuItem Header="File">
                    <MenuItem Header="Save"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Delete"/>
                    <MenuItem Header="Insert"/>
                </MenuItem>
            </Menu>

            <!--column1-->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="20,0,0,0">

                <ComboBox
                    Name="cmbExtension"
                    Width="70"
                />
                <TextBox
                    Name="txtSearch"
                    GotFocus="txtSearch_GotFocus"
                    LostFocus="txtSearch_LostFocus"
                     
                    Width="290"
                    Margin="10,0,10,0"
                    FontSize="16"
                    Text="Search"
                    Padding="5"
                />
            </StackPanel>
        </Grid>

        <!--row1-->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--<TreeView Grid.Column="0"
                      Name="treeView"
                      FontSize="15"
                      Margin="5"
                      ItemTemplate="{StaticResource IconTemplate}"
             />-->

            <!--column0 tree view-->
            <TreeView Name="treeView" FontSize="13" Margin="5" ItemsSource="{Binding itemModels}">
                <!--show tree view template-->
                <TreeView.ItemTemplate>

                    <!--show tree hierarchical, will apply the same style to all level hierarchy-->
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">

                        <StackPanel MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" Orientation="Horizontal">
                            <Image Source="{Binding Icon}" Width="20" Height="20"/>
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>

                    </HierarchicalDataTemplate>

                </TreeView.ItemTemplate>
            </TreeView>


            <!--column1 list view-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--row0-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.05*"/>
                        <ColumnDefinition Width="0.05*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Name"/>
                    <TextBlock Grid.Column="1" Text="Type"/>
                    <TextBlock Grid.Column="2" Text="Size" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Create Date" HorizontalAlignment="Center"/>
                </Grid>

                <!--row1-->
                <ListView Grid.Row="1" 
                          Name="listView"
                          Margin="0,5,0,0"
                          ItemsSource="{Binding ListViewItemModels}" 
                          ItemTemplate="{StaticResource IconTemplate}" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                          ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <!--<ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>-->
            </Grid>

        </Grid>
    </Grid>
</Window>