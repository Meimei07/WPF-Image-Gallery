<Window x:Class="WPF_Image_Gallery.frmViewImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Image_Gallery"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Gallery" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <!--row0-->
        <Image Name="img" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" MouseWheel="img_MouseWheel" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <ScaleTransform x:Name="ImageScale" ScaleX="1" ScaleY="1" />
            </Image.RenderTransform>
        </Image>

        <!--row1-->
        <Border Grid.Row="1"
                CornerRadius="25"
                Background="MistyRose"
                Width="300"    
                Height="45">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="btnZoomIn" Click="btnZoomIn_Click"
                            BorderThickness="0" Background="MistyRose" Margin="0,0,15,0">
                        <Image Source="/Images/zoom in.png" Height="25"/>
                    </Button>
                    <Button Name="btnZoomOut" Click="btnZoomOut_Click"
                            BorderThickness="0" Background="MistyRose">
                        <Image Source="/Images/zoom out.png" Height="25"/>
                    </Button>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Image Margin="0,0,10,0" Source="/Images/preivous.png"/>
                    <Image Margin="10,0,0,0" Source="/Images/next.png"/>
                </StackPanel>
                
            </Grid>
        </Border>
    </Grid>
</Window>